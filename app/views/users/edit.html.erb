<h1>Edit Profile</h1>
 <%if @user.errors.any?%> 
    <div>
         <ul> 
            <% @user.errors.each do |error|%>
                <li> 
                    <%= error.full_message %>
                </li>
            <% end %>
        </ul>
    </div>
<% end %>

<%= form_with model: @user, local: true do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :username %>
    <%= f.text_field :username %>
    <%= f.label :age %>
    <%= f.number_field :age%>
    <%= f.label :male %>
    <%= f.radio_button :gender, :male %>
    <%= f.label :female %>
    <%= f.radio_button :gender, :female %>
    <%= f.label :dob %>
    <%= f.date_field :dob %>
    <%= f.submit "update profile"%>
<% end %>